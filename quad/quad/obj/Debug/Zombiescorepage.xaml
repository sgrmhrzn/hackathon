<Page
    x:Class="quad.Zombiescorepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="scorepage" HorizontalAlignment="Left" Height="860" VerticalAlignment="Top" Width="1608" Source="Assets/end.jpg" Margin="0,0,-242,-92"/>
        <TextBlock FontFamily="Chiller" FontSize="90" HorizontalAlignment="Left" Margin="312,144,0,0" TextWrapping="Wrap" Text="Your Score" VerticalAlignment="Top" Height="163" Width="342" Foreground="#FFE20F0F"/>
        <TextBlock FontSize="50" x:Name="urscore" HorizontalAlignment="Left" Margin="644,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="103" Width="144"/>
        <Button x:ConnectionId='1' x:Name="_try" FontFamily="Chiller" FontSize="90" Content="Try Again" HorizontalAlignment="Left" Margin="558,524,0,0" VerticalAlignment="Top" Height="147" Width="344" Foreground="#FFF52121"                   />
        <Button x:ConnectionId='2' x:Name="exit" FontFamily="Chiller" FontSize="90" Content="Exit" HorizontalAlignment="Left" Margin="1076,524,-3,0" VerticalAlignment="Top" Height="137" Width="293" Foreground="#FFF71414"                   />
        <Button x:ConnectionId='3' x:Name="_try_Copy" FontFamily="Chiller" FontSize="90" Content="Home" HorizontalAlignment="Left" Margin="40,524,0,0" VerticalAlignment="Top" Height="147" Width="344" Foreground="#FFF52121"                        />

    </Grid>
</Page>

